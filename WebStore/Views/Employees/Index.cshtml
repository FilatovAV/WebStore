@model IEnumerable<WebStore.Models.Employee>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.SurName</td>
                <td>@item.FirstName</td>
                <td>@item.Patronymic</td>
                <td>@item.Age</td>
                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id">Детали</a></td>

            </tr>
        }
    </tbody>
</table>