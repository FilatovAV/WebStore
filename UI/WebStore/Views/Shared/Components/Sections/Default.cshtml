@model  IEnumerable<WebStore.Domain.ViewModels.Product.SectionViewModel>

<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var item in Model)
    {
        if (item.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@item.Id">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @item.Name
                        </a>
                    </h4>
                </div>
                <div id="@item.Id" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var item_child in item.ChildSections)
                            {
                                <li><a href="#">@item_child.Name </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a href="#">@item.Name</a></h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->