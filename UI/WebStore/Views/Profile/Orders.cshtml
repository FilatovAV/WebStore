@model  IEnumerable<WebStore.Domain.ViewModels.Order.UserOrderViewModel>
@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Sum total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.TotalSum.ToString("C")</td>
        </tr>
        }
    </tbody>
</table>